{
  "name": "openspecui-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "OpenSpec Web UI - Visual interface for spec-driven development",
  "type": "module",
  "scripts": {
    "npm": "pnpm build && pnpm pub",
    "pub": "pnpm publish --access publish --no-git-checks --filter=openspecui",
    "dev": "tsx scripts/dev.ts",
    "dev:server": "pnpm --filter @openspecui/server dev",
    "dev:web": "pnpm --filter @openspecui/web dev",
    "build": "pnpm run build:deps && pnpm run typecheck && pnpm run build:packages && pnpm run build:cli",
    "build:deps": "pnpm --filter @openspecui/core build && pnpm --filter @openspecui/ai-provider build",
    "build:packages": "pnpm --filter @openspecui/server build && pnpm --filter @openspecui/web build",
    "build:cli": "pnpm --filter openspecui run build:copy-web && pnpm --filter openspecui exec tsdown",
    "typecheck": "pnpm -r --parallel run typecheck",
    "tc": "pnpm -r --parallel run typecheck",
    "preview": "pnpm --filter openspecui dev",
    "lint": "eslint .",
    "format": "prettier --write .",
    "test": "vitest",
    "example:setup": "tsx scripts/setup-example.ts",
    "example:clean": "tsx scripts/setup-example.ts --clean",
    "example:dev": "pnpm example:setup && pnpm preview --dir ./example"
  },
  "keywords": [
    "openspec",
    "spec-driven",
    "ai-assisted",
    "development"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.22.0",
  "engines": {
    "node": ">=20.19.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "prettier": "^3.4.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "tsx": "^4.20.6",
    "typescript": "^5.7.2"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@parcel/watcher"
    ],
    "patchedDependencies": {}
  },
  "trustedDependencies": [
    "@parcel/watcher"
  ]
}
