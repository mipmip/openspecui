{
  "name": "@openspecui/web",
  "version": "0.8.0",
  "type": "module",
  "files": [
    "dist",
    "src",
    "index.html",
    "vite.config.ts",
    "tsconfig.json"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:client": "vite build --ssrManifest .vite/ssr-manifest.json --outDir dist/client",
    "build:server": "vite build --ssr src/ssg/entry-server.tsx --outDir dist/server",
    "build:ssg": "pnpm build:client && pnpm build:server",
    "prerender": "tsx src/ssg/prerender.ts",
    "typecheck": "tsc --noEmit",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@codemirror/commands": "^6.10.0",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-json": "^6.0.2",
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/lang-yaml": "^6.1.2",
    "@codemirror/language": "^6.11.3",
    "@codemirror/language-data": "^6.5.2",
    "@codemirror/state": "^6.5.2",
    "@codemirror/view": "^6.38.8",
    "@lezer/common": "^1.4.0",
    "@lezer/highlight": "^1.2.3",
    "@openspecui/server": "workspace:*",
    "@tanstack/react-query": "^5.62.16",
    "@tanstack/react-router": "^1.99.0",
    "@trpc/client": "^11.0.0",
    "@trpc/tanstack-react-query": "^11.0.0",
    "@uiw/react-codemirror": "^4.25.3",
    "lucide-react": "^0.472.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "shiki": "^3.17.0",
    "vite": "^7.3.1",
    "@vitejs/plugin-react": "^5.1.3",
    "@tailwindcss/vite": "^4.1.18",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@tailwindcss/typography": "^0.5.19",
    "@types/react": "^19.0.4",
    "@types/react-dom": "^19.0.2",
    "jsdom": "^25.0.1",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "tsx": "^4.19.2",
    "yargs": "^18.0.0",
    "@types/yargs": "^17.0.35"
  }
}
