{
  "name": "openspecui",
  "version": "0.4.0",
  "description": "OpenSpec UI - Visual interface for spec-driven development",
  "type": "module",
  "main": "dist/index.mjs",
  "bin": {
    "openspecui": "./dist/cli.mjs"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs"
    }
  },
  "files": [
    "dist",
    "web"
  ],
  "scripts": {
    "build": "pnpm run build:web && pnpm run build:copy-web && tsdown",
    "build:web": "pnpm --filter @openspecui/web build",
    "build:copy-web": "rm -rf ./web && cp -r ../web/dist ./web",
    "typecheck": "tsc --noEmit",
    "dev": "tsx src/cli.ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@hono/node-server": "^1.14.1",
    "@openspecui/ai-provider": "workspace:*",
    "@openspecui/server": "workspace:*",
    "@types/node": "^22.10.2",
    "@types/ws": "^8.5.13",
    "@types/yargs": "^17.0.35",
    "hono": "^4.7.3",
    "open": "^10.1.0",
    "tsdown": "^0.16.6",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "yargs": "^18.0.0"
  }
}
